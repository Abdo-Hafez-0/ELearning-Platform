@model ELearningPlatform.Models.User
@{
    ViewData["Title"] = "Delete Student";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Delete Student</h1>
        <a asp-action="Students" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i> Back to Students
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Warning</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning mb-4">
                <div class="d-flex">
                    <div class="me-3">
                        <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                    </div>
                    <div>
                        <h5 class="alert-heading h6">Are you sure you want to delete this student?</h5>
                        <p class="mb-0">This action cannot be undone. All enrollments, assignments, and certifications associated with this student will also be deleted.</p>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-3 mb-3 text-center">
                    <img src="@(string.IsNullOrEmpty(Model.ProfileImageUrl) ? "/images/profile-placeholder.jpg" : "/images/"+Model.ProfileImageUrl)"
                         alt="@Model.FirstName @Model.LastName" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
                </div>
                <div class="col-md-9">
                    <h4>@Model.FirstName @Model.LastName</h4>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                    <p><strong>Birth Date:</strong> @(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToString("MMMM d, yyyy") : "Not specified")</p>
                </div>
            </div>
            
            <form asp-action="DeleteStudent" method="post" class="mt-4">
                <input type="hidden" asp-for="UserID" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Students" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i> Delete Student
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
