@model ELearningPlatform.Models.Admin
@{
    ViewData["Title"] = "Delete Admin";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Delete Admin</h1>
        <a asp-action="Admins" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i> Back to Admins
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Warning</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning mb-4">
                <div class="d-flex">
                    <div class="me-3">
                        <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                    </div>
                    <div>
                        <h5 class="alert-heading h6">Are you sure you want to delete this admin?</h5>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>
                </div>
            </div>
            
            <div class="mb-4">
                <h4>Admin Details</h4>
                <p><strong>Username:</strong> @Model.Username</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                <p><strong>Created:</strong> @Model.CreatedAt.ToString("MMMM d, yyyy")</p>
                <p><strong>Last Login:</strong> @(Model.LastLogin.HasValue ? Model.LastLogin.Value.ToString("MMMM d, yyyy HH:mm") : "Never")</p>
            </div>
            
            <form asp-action="DeleteAdmin" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Admins" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i> Delete Admin
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
