@model ELearningPlatform.Models.Review
@{
    ViewData["Title"] = "Delete Review";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Reviews" asp-action="MyReviews">My Reviews</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete Review</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h1 class="h4 mb-0">Delete Review</h1>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="bi bi-exclamation-triangle-fill fs-4"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading h6">Are you sure you want to delete this review?</h5>
                                <p class="mb-0">This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Course.CourseName</h5>
                            <div class="text-warning mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Model.Rating)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                }
                            </div>
                            <p class="text-muted mb-2">
                                <small>Reviewed on @Model.CreatedAt.ToString("MMMM d, yyyy")</small>
                            </p>
                            <p class="mb-0">@Model.Comment</p>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ReviewID" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="MyReviews" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i> Delete Review
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
